# LLM API Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
HUGGINGFACE_TOKEN=your_huggingface_token_here

# LLM Model Selection
LLM_PROVIDER=openai  # Options: openai, anthropic, huggingface, ollama, deepseek
LLM_MODEL=gpt-4  # For OpenAI: gpt-4, gpt-3.5-turbo
OLLAMA_HOST=http://localhost:11434  # For local Ollama
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com

# Security Scanning Tools
SONARQUBE_URL=http://localhost:9000
SONARQUBE_TOKEN=your_sonarqube_token
ZAP_API_KEY=your_zap_api_key
ZAP_PROXY_ADDRESS=http://localhost:8080

# CI/CD Integration
GITLAB_URL=https://gitlab.com
GITLAB_TOKEN=your_gitlab_token
GITHUB_TOKEN=your_github_token
JENKINS_URL=http://localhost:8080
JENKINS_USERNAME=admin
JENKINS_PASSWORD=your_jenkins_password

# AWS Configuration (if using AWS CodePipeline)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Policy Generation Settings
POLICY_FRAMEWORK=NIST_CSF  # Options: NIST_CSF, ISO_27001, CIS_CONTROLS
POLICY_OUTPUT_FORMAT=json  # Options: json, pdf, markdown, html
MAX_POLICY_LENGTH=2000  # Maximum tokens for generated policy

# Evaluation Settings
REFERENCE_POLICIES_PATH=./data/reference_policies
EVALUATION_METRICS=BLEU,ROUGE-L,COMPLIANCE  # Comma-separated

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR
LOG_FILE=./logs/devsecopsai.log

# Application Settings
APP_NAME=DevSecOps AI
APP_VERSION=1.0.0
ENVIRONMENT=development  # Options: development, staging, production
